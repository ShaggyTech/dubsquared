{
    "[vue]": {
        "editor.tabSize": 2,
    },
    "[javascript]": {
        "editor.tabSize": 2,
    },
    "[typescript]": {
        "editor.tabSize": 2,
    },
    "javascript.format.semicolons": "remove",
    "typescript.tsdk": "node_modules/typescript/lib",
    "css.validate": false,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": true
    },
    "windicss.sortOnSave": false,
    "tailwindCSS.classAttributes": [
        "class",
        "className",
        "ngClass",
        ":class"
    ],
    "headwind.runOnSave": false,
    "windicss.enableEmmetCompletion": true,
    "windicss.colorDecoratorsType": "picker",
}